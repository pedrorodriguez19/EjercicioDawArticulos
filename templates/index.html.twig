{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex flex-row">
        <div class="list-group mx-5 my-3">
            <a href="{{ path('categoria', {cat: 'Opinion'}) }}" class="list-group-item list-group-item-action">Opinión</a>
            <a href="{{ path('categoria', {cat: 'Reportaje'}) }}" class="list-group-item list-group-item-action">Reportaje</a>
            <a href="{{ path('categoria', {cat: 'Divulgacion'}) }}" class="list-group-item list-group-item-action">Divulgación</a>
            <a href="{{ path('categoria', {cat: 'Informativo'}) }}" class="list-group-item list-group-item-action">Informativo</a>
            <a href="{{ path('categoria', {cat: 'Editorial'}) }}" class="list-group-item list-group-item-action">Editorial</a>
            <a href="{{ path('categoria', {cat: 'Columna'}) }}" class="list-group-item list-group-item-action">Columna</a>
        </div>
        <div class="container d-flex flex-column my-3">
            {% for article in articles %}
                <div class="card w-75 my-2">
                    <div class="card-body">
                        <h4 class="card-title">{{ article.titulo }}</h4>
                        <p class="card-text">{{ article.resumen }}</p>
                        <div class="d-flex justify-content-end">
                            <a href="{{ path('article', {num: article.id}) }}" class="btn btn-primary">Ver artículo</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block title %}
    Mi Repertorio
{% endblock %}

